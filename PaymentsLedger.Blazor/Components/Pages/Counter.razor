@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<div class="space-y-4">
    <h1 class="text-2xl font-semibold">Counter</h1>
    <p role="status">Current count: <span class="font-mono">@currentCount</span></p>
    <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" @onclick="IncrementCount">Click me</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
