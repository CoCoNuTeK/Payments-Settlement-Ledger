<script type="module" src="@Assets["Components/Layout/ReconnectModal.razor.js"]"></script>

<dialog id="components-reconnect-modal" data-nosnippet class="w-full max-w-md mx-auto p-0">
    <div class="components-reconnect-container bg-white text-gray-800 rounded-lg shadow-xl p-6">
        <div class="components-rejoining-animation mb-4 flex items-center justify-center gap-2" aria-hidden="true">
            <div class="h-2 w-2 rounded-full bg-blue-600 animate-bounce"></div>
            <div class="h-2 w-2 rounded-full bg-blue-600 animate-bounce [animation-delay:120ms]"></div>
        </div>
        <p class="components-reconnect-first-attempt-visible text-sm text-gray-700">
            Rejoining the server...
        </p>
        <p class="components-reconnect-repeated-attempt-visible text-sm text-gray-700 mt-2">
            Rejoin failed... trying again in <span id="components-seconds-to-next-attempt" class="font-semibold"></span> seconds.
        </p>
        <p class="components-reconnect-failed-visible text-sm text-red-600 mt-2">
            Failed to rejoin.<br />Please retry or reload the page.
        </p>
        <button id="components-reconnect-button" class="components-reconnect-failed-visible mt-3 inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
            Retry
        </button>
        <p class="components-pause-visible text-sm text-gray-700 mt-3">
            The session has been paused by the server.
        </p>
        <button id="components-resume-button" class="components-pause-visible mt-3 inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
            Resume
        </button>
        <p class="components-resume-failed-visible text-sm text-red-600 mt-2">
            Failed to resume the session.<br />Please reload the page.
        </p>
    </div>
    </dialog>
