<script type="module" src="@Assets["Components/Layout/ReconnectModal.razor.js"]"></script>

<dialog id="components-reconnect-modal" data-nosnippet class="backdrop:bg-black/25">
    <div class="components-reconnect-container mx-auto max-w-sm rounded-lg bg-white p-6 shadow">
        <div class="components-rejoining-animation" aria-hidden="true">
            <div></div>
            <div></div>
        </div>
        <p class="components-reconnect-first-attempt-visible text-sm text-gray-700">
            Rejoining the server...
        </p>
        <p class="components-reconnect-repeated-attempt-visible text-sm text-gray-700">
            Rejoin failed... trying again in <span id="components-seconds-to-next-attempt"></span> seconds.
        </p>
        <p class="components-reconnect-failed-visible text-sm text-red-700">
            Failed to rejoin.<br />Please retry or reload the page.
        </p>
        <button id="components-reconnect-button" class="components-reconnect-failed-visible mt-3 inline-flex items-center rounded bg-indigo-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-indigo-500">
            Retry
        </button>
        <p class="components-pause-visible text-sm text-gray-700">
            The session has been paused by the server.
        </p>
        <button id="components-resume-button" class="components-pause-visible mt-2 inline-flex items-center rounded bg-indigo-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-indigo-500">
            Resume
        </button>
        <p class="components-resume-failed-visible text-sm text-red-700">
            Failed to resume the session.<br />Please reload the page.
        </p>
    </div>
</dialog>
