@page "/dashboard"
@attribute [Authorize]
@layout AppLayout

<h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>

<AuthorizeView>
  <Authorized>
    <p class="mt-4 text-gray-700">Hello, @context.User.Identity?.Name!</p>
  </Authorized>
  <NotAuthorized>
    <p class="mt-4 text-red-600">You're not authorized.</p>
  </NotAuthorized>
  <Authorizing>
    <p class="mt-4 text-gray-500">Authorizing...</p>
  </Authorizing>
</AuthorizeView>
